                        </div>
                    </div>

                   
                </div>

                    <div class="row pb-3 backgroundWhite">

        @foreach (var product in Model)
        {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>
                            @*<p class="card-title text-primary">by <b>@product.Artist</b></p>*@
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <b class="">$@product.Price.ToString("0.00")</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">@product.Description</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
        }

    </div>