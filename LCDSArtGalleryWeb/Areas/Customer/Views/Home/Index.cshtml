                                <div class="carousel-item" data-interval="2000">
                                    <img src="/images/home/download.jfif" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item" data-interval="2000">
                                    <img src="/images/home/download.jfif" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item" data-interval="2000">
